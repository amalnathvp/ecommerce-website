<!-- Product Shop Section Begin -->
    <section class="product-shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                    <div class="filter-widget">
                        <h4 class="fw-title">Categories</h4>
                        <ul class="filter-catagories">
                            <li><a href="/men">Men</a></li>
                            <li><a href="/women">Women</a></li>
                            <li><a href="/kids">Kids</a></li>
                        </ul>
                    </div>
                    <div class="filter-widget">
                        <h3 class="fw-title">Men</h3>
                        <div class="fw-brand-check">
                            <div class="bc-item">
                                <label for="bc-calvin">
                                  <a href="/men/shoes">Men's Shoes</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-diesel">
                                   <a href="/men/clothing">Men's Clothing</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-polo">
                                   <a href="/men/accessories">Men's Accessories</a>
                                </label>
                            </div>
                            
                        </div>
                    </div>

                    <div class="filter-widget">
                        <h3 class="fw-title">Women</h3>
                        <div class="fw-brand-check">
                            <div class="bc-item">
                                <label for="bc-calvin">
                                  <a href="/women/shoes">Women's Shoes</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-diesel">
                                   <a href="/women/clothing">Women's Clothing</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-polo">
                                   <a href="/women/accessories">Women's Accessories</a>
                                </label>
                            </div>
                            
                        </div>
                    </div>

                    <div class="filter-widget">
                        <h3 class="fw-title">Kids</h3>
                        <div class="fw-brand-check">
                            <div class="bc-item">
                                <label for="bc-calvin">
                                  <a href="/kids/shoes">Kid's Shoes</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-diesel">
                                   <a href="/kids/clothing">Kid's Clothing</a>
                                </label>
                            </div>
                            <div class="bc-item">
                                <label for="bc-polo">
                                   <a href="/kids/accessories">Kid's Accessories</a>
                                </label>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 order-1 order-lg-2">
                    <div class="product-show-option">
                        <div class="row">
                            <div class="col-lg-7 col-md-7">
                                <div class="select-option">
                                    <select class="sorting">
                                        <option value="">Default Sorting</option>
                                    </select>
                                    <select class="p-show">
                                        <option value="">Show:</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-5 text-right">
                                <p>Show 01- 09 Of 36 Product</p>
                            </div>
                        </div>
                    </div>
                    <div class="product-list">
                        <div class="row">
                                {{#each Textiles}}
                                
                            <div class="col-lg-4 col-sm-6">
                                <div class="product-item">
                                    <div class="pi-pic">
                                        <img src="/images/{{this._id}}.jpg" alt="">
                                        <div class="sale pp-sale">Sale</div>
                                        <div class="icon">
                                            <i class="icon_heart_alt"></i>
                                        </div>
                                        <ul>
                                            {{!-- <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li> --}}
                                            <li class="quick-view"><a href="/add-to-cart/{{this._id}}">Add to Cart</a></li>
                                            {{!-- <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li> --}}
                                        </ul>
                                    </div>
                                    <div class="pi-text">
                                        <div class="catagory-name">{{this.product_category}}</div>
                                        <a href="#">
                                            <h5>{{this.product_name}}</h5>
                                        </a>
                                        <div class="product-price">
                                            {{this.product_price}}
                                            <span>{{this.product_old_price}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                {{/each}}

                                </div>
                    </div>
                    <div class="loading-more">
                        <i class="icon_loading"></i>
                        <a href="#">
                            Loading More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>