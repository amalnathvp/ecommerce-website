<form class="form-horizontal" action="/admin/edit-banner/{{banners._id}}" method="post" enctype="multipart/form-data">
<fieldset>

<!-- Form Name -->
<legend>EDIT BANNERS</legend>
</div>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="banner_name">BANNER NAME</label>  
  <div class="col-md-4">
  <input id="banner_name" value="{{banners.banner_name}}" name="banner_name"  class="form-control input-md" required="" type="text">
    
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="filebutton">main_image</label>
  <div class="col-md-4">
    <input id="image1" name="image1" class="input-file" type="file" onchange="viewImage(event)"><br>
    <img src="/images/{{banners._id}}.jpg" alt="" style="width:200px; height:auto" id="imgView">
  </div>
</div>


<!-- Button -->
<div class="form-group">
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-primary">SUBMIT</button>
  </div>
  </div>

</fieldset>
</form>

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>